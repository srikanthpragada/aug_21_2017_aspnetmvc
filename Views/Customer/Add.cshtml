@model mvcdemo.Models.Customer

@{
    Layout = "~/Views/Shared/_Master.cshtml";
}

@section myscripts
{
   @Scripts.Render("~/bundles/jqueryval")
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

