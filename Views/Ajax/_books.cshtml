@model IEnumerable<mvcdemo.Models.Book>

@if (Model.Count() > 0)
{
    <h1>List of Books</h1>
    <table width="100%" border="1" cellpadding="5px">
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
        </tr>

        @foreach (var book in Model)
        {
            <tr>
                <td>
                    @book.Title
                </td>
                <td>
                    @book.Author
                </td>
                <td>
                    @book.Price.ToString("C")
                </td>

            </tr>
        }

    </table>
}
else
{
    <h2>Sorry! No books found!</h2>
}

