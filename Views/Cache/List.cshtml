@model IEnumerable<mvcdemo.Models.Book>

@{
    Layout = null;
}

<h1>List of Books</h1>
<table width="100%" border="1" cellpadding="5px">
    <tr>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Price
        </th>
    </tr>

    @foreach (var book in Model)
    {
        <tr>
            <td>
                @book.Title.ToUpper()
            </td>
            <td>
                @book.Author
            </td>
            <td>
                @book.Price.ToString("C")
            </td>

        </tr>
    }

</table>

<p></p>
@ViewBag.Message
